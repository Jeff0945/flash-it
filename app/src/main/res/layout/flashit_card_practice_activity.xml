    <ImageView
        android:id="@+id/left_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/numbers"
        app:layout_constraintEnd_toStartOf="@+id/numbers"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/numbers"
        app:layout_constraintVertical_bias="0.525"
        app:srcCompat="@drawable/left_button" />

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/numbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/numbers"
        app:layout_constraintTop_toTopOf="@+id/numbers"
        app:layout_constraintVertical_bias="0.525"
        app:srcCompat="@drawable/right_button" />

    <ImageView
        android:id="@+id/audio_button"
        android:layout_width="41dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:layout_constraintVertical_bias="0.649"
        app:srcCompat="@drawable/audio_on" />

    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:layout_constraintVertical_bias="0.649"
        app:srcCompat="@drawable/edit_button" />

    <ImageView
        android:id="@+id/level_plate"
        android:layout_width="329dp"
        android:layout_height="192dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/level_plate" />

    <Button
        android:id="@+id/medium_button"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/teal_700"
        android:text="Medium"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/level_plate"
        app:layout_constraintEnd_toEndOf="@+id/level_plate"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/level_plate"
        app:layout_constraintTop_toTopOf="@+id/level_plate" />

    <Button
        android:id="@+id/easy_button"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/teal_700"
        android:text="Easy"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/medium_button"
        app:layout_constraintEnd_toEndOf="@+id/level_plate"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/level_plate"
        app:layout_constraintTop_toTopOf="@+id/level_plate"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/hard_button"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/teal_700"
        android:text="Hard"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/level_plate"
        app:layout_constraintEnd_toEndOf="@+id/level_plate"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/level_plate"
        app:layout_constraintTop_toBottomOf="@+id/medium_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/teal_700"
        android:text="Answer"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit_button"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/audio_button"
        app:layout_constraintTop_toBottomOf="@+id/numbers"
        app:layout_constraintVertical_bias="0.174" />

    <TextView
        android:id="@+id/numbers"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="00/10"
        android:textColor="@color/teal_700"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525" />

</androidx.constraintlayout.widget.ConstraintLayout>